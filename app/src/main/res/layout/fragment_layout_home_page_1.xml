<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="首页"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myFragment_1_fragmentView_textView_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background_click"
            android:gravity="center"
            android:text="一周热门"/>
        <TextView
            android:id="@+id/myFragment_1_fragmentView_textView_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:gravity="center"
            android:text="当季最热"/>
        <TextView
            android:id="@+id/myFragment_1_fragmentView_textView_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:gravity="center"
            android:text="人气菜肴"/>
        <TextView
            android:id="@+id/myFragment_1_fragmentView_textView_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:gravity="center"
            android:text="明星菜谱"/>
        <TextView
            android:id="@+id/myFragment_1_fragmentView_textView_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:gravity="center"
            android:text="食神菜单"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/myFragment_1_fragmentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

</LinearLayout>